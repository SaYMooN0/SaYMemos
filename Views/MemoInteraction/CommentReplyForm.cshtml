@model CommentReplyForm

<form hx-post='/MemoInteraction/SaveReplyComment' class="comment-reply-form" hx-swap="outerHTML">
    <label class="comment-reply-preview">replying to <span>@Model.messageToReplyPreview</span></label>
    <div class="comment-reply-new-author-info">
        <img src="@Model.userProfilePicture" alt="profile picture" class="comment-reply-user-image" />
        <label class="comment-reply-new-author-nickname">@Model.userNickname</label>
    </div>
    @if(!string.IsNullOrWhiteSpace(Model.errorLine))
    {
        <p class="error-line">@Model.errorLine</p>
    }
    <input type="hidden" asp-for="parentCommentId" />
    <div class="comment-reply-input-area">
        <input type="text" placeholder="Write a reply" asp-for="text" value="@($"@{Model.userToReply}"), " class="comment-reply-input" />
        <button type='submit' class="post-comment-button">
            <svg viewBox="0 0 512 512">
                <path d="M16.1 260.2c-22.6 12.9-20.5 47.3 3.6 57.3L160 376V479.3c0 18.1 14.6 32.7 32.7 32.7c9.7 0 18.9-4.3 25.1-11.8l62-74.3 123.9 51.6c18.9 7.9 40.8-4.5 43.9-24.7l64-416c1.9-12.1-3.4-24.3-13.5-31.2s-23.3-7.5-34-1.4l-448 256zm52.1 25.5L409.7 90.6 190.1 336l1.2 1L68.2 285.7zM403.3 425.4L236.7 355.9 450.8 116.6 403.3 425.4z" />
            </svg>
        </button>
    </div>
</form>
