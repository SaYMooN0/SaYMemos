@model CommentReplyForm

<form hx-post='/MemoInteraction/SaveReplyComment' class="comment-reply-form">
    <img src="@Model.userProfilePicture" alt="profile picture" class="comment-reply-user-image" />
    <div class="comment-reply-main-content">
        <p class="error-line">@(!string.IsNullOrWhiteSpace(Model.errorLine) ? Model.errorLine : string.Empty)</p>
        <input type="hidden" asp-for="parentCommentId"/>
        <input type="text" placeholder="Write a reply" asp-for="text" value="@($"@{Model.userToReply}"), " class="comment-reply-input" />
        <input type="submit" value="Post" class="comment-reply-submit" />
    </div>
</form>
