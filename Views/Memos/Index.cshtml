@{
    ViewData["Title"] = "Memos";
}
@model MemoPageViewModel
@{
    string[] PopularTags =
               ["fashion", "love", "memooftheday", "beautiful", "art", "photography", "happy", "nature", "fitness", "technology", "travel", "music", "food"];

}
<link rel="stylesheet" href="~/css/pages/memos/memos_page.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/pages/memos/memos_page_filter.css" asp-append-version="true" />
<div class="frame">
    <div class="memos-container">
        <div class="sort-options-container">
            <form hx-target=".content-area" hx-swap="innerHTML">
                <select asp-for="@Model.sorting.sortType" asp-items="Html.GetEnumSelectList<SortTypes>()" class="sort-select" name='sortType'
                        hx-post="/memos/sortingChanged" hx-trigger="change delay:200ms" hx-include="[name='sortType'],[name='isDescending']">
                </select>
                <div class="sort-direction-toggle">
                    <label for="sortDescending" class="sort-direction-label">
                        <input asp-for="@Model.sorting.isDescending" type="checkbox" id="sortDescending" class="sort-direction-checkbox" name='isDescending'
                               hx-post="/memos/sortingChanged" hx-trigger="change delay:200ms" hx-include="[name='sortType'],[name='isDescending']" />
                        <svg class="sort-arrow" viewBox="0 0 448 512">
                            <path d="M201.4 342.6c12.5 12.5 32.8 12.5 45.3 0l160-160c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L224 274.7 86.6 137.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3l160 160z" />
                        </svg>
                    </label>
                </div>
            </form>
        </div>
        <div class="content-area" hx-trigger="intersect once" hx-swap="innerHTML" hx-target='this' hx-post="/Memos/RenderNewPackage">
        </div>
    </div>
    <form class="memos-filter" hx-post="/memos/ApplyFilter">
        <label class="filter-label">Post Date</label>
        <div class="from-to-inputs-block">
            <label class="from-to-label">from:</label>
            <input type="date" asp-for="filter.dateFrom" />
            <label class="from-to-label">to:</label>
            <input type="date" asp-for="filter.dateTo" />
        </div>
        <label class="filter-label">Likes Count</label>
        <div class="from-to-inputs-block">
            <label class="from-to-label">from:</label>
            <input type="number" min="0" max="999999" asp-for="filter.likesFrom" />
            <label class="from-to-label">to:</label>
            <input type="number" min="0" max="999999" asp-for="filter.likesTo" />
        </div>
        <label class="filter-label">Comments Count</label>
        <div class="from-to-inputs-block">
            <label class="from-to-label">from:</label>
            <input type="number" min="0" max="999999" asp-for="filter.commentsFrom" />
            <label class="from-to-label">to:</label>
            <input type="number" min="0" max="999999" asp-for="filter.commentsTo" />
        </div>
        <div class="filter-tags">
            <label class="filter-tags-label">Chosen tags:</label>
            <div id="filter-chosen-tags">
                @foreach (string tag in Model.filter.tags)
                {
                    <filter-tag tagname="@tag" />
                }
            </div>
            <label class="filter-tags-label">Use search bar to find other tags:</label>
            <div class="search-tag-container">
                <input type="text" class="search-tag-input" hx-trigger="keyup delay:200ms" hx-post="memos/RenderFoundTags" name="searchTag" hx-target="#found-tags">
                <span class="search-tag-icon">
                    <svg viewBox="0 0 512 512">
                        <path d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z" />
                    </svg>

                </span>
            </div>

            <div id="found-tags">
            </div>
            <label class="filter-tags-label">Or choose from popular:</label>
            @foreach (string tag in PopularTags)
            {
                <add-filter-tag tagname="@tag"></add-filter-tag>
            }

        </div>

        <div class="filter-buttons">
            <button type="button" class="clear-filters-btn">Clear Filters</button>
            <button type="submit" class="apply-filters-btn">Apply Filters</button>
        </div>
    </form>
</div>